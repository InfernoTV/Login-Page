	<script>
		(function() {
			// affichage d'éventuels messages issus de educt-messages
			let messageAvertissement = document.getElementById("messageAvertissement");
			let sidebarMaintenance = document.getElementById("sidebar_maintenance");
			if (typeof messages !== "undefined" && typeof messages.avertissementPageLogin !== "undefined" && messages.avertissementPageLogin != '') {
				messageAvertissement.classList.remove('hidden-item');
				messageAvertissement.innerHTML = messages.avertissementPageLogin;
			} else {
				sidebarMaintenance.classList.add("fr-displayed-md");
			}
			
				document.getElementById('password').setAttribute("aria-invalid", "true");
				document.getElementById('password').setAttribute("aria-describedby", "erreurMdp");
				document.getElementById('erreurMdp').setAttribute("hidden", false);
				document.getElementById('erreurMdp').classList.add("fr-error-text");
				
				document.getElementById('username').setAttribute("aria-invalid", "true");
				document.getElementById('username').setAttribute("aria-describedby", "erreurIdentifiantResponsable");
				document.getElementById('erreurIdentifiant').setAttribute("hidden", false);
				document.getElementById('erreurIdentifiant').classList.add("fr-error-text");
		})(); 	
	</script>
	<script>
		function checkLoginMdp() {
			var identifiantValide = false;
			var passwordValide = false
			if(document.getElementById('username').value == "") {
				document.getElementById('erreurIdentifiantVide').setAttribute("hidden", false);
				document.getElementById('erreurIdentifiantVide').classList.add("fr-error-text");
				document.getElementById('erreurIdentifiant').setAttribute("hidden", true);
				document.getElementById('erreurIdentifiant').classList.remove("fr-error-text");
		    }else {
				identifiantValide = true;
				document.getElementById('erreurIdentifiantVide').setAttribute("hidden", true);
				document.getElementById('erreurIdentifiantVide').classList.remove("fr-error-text");
			}
			if(document.getElementById('password').value == "") {
				document.getElementById('erreurMdpVide').setAttribute("hidden", false);
				document.getElementById('erreurMdpVide').classList.add("fr-error-text");
				document.getElementById('erreurMdp').setAttribute("hidden", true);
				document.getElementById('erreurMdp').classList.remove("fr-error-text");
		
		    }else {
				passwordValide = true;
				document.getElementById('erreurMdpVide').setAttribute("hidden", true);
				document.getElementById('erreurMdpVide').classList.remove("fr-error-text");
			}
			if (identifiantValide && passwordValide) {
				//this.childNodes[0].nodeValue='Connexion en cours...';
				return true;
			}else {
				return false;
			}
		}
	</script>
	
